{% extends 'base.html.twig' %}
{% block title %}Détails commentaire signalé(s){% endblock %}
{% block body %}
{{ include('_nav.html.twig') }}

<div class="contaier-fluid mx-5">
		<h1 class="text-center pt-5 ourShadow">Détails commentaire signalé(s)</h1>
		<div class="d-flex justify-content-end">
			<a href="{{ path('back_review') }}">
				<button type="button" class="btn ourBtnXl m-2">Retour à la liste</button>
			</a>
		</div>
		<div class="d-flex justify-content-center">
			<table class="table table-hover table-bordered text-center">
		<tbody>
			<tr>
				<th class="table-secondary">Id</th>
				<td>{{ review.id }}</td>
			</tr>
			<tr>
				<th class="table-secondary">Commentaire signalé(s)</th>
				<td>{{ review.content }}</td>
			</tr>
			<tr>
				<th class="table-secondary">Date de publication</th>
				<td>{{ review.publishedAt ? review.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th class="table-secondary">Date de création</th>
				<td>{{ review.createdAt ? review.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th class="table-secondary">Date de Mise à jour</th>
				<td>{{ review.updatedAt ? review.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>
</div>
<div class="d-flex justify-content-end">
	{{ include('back/review/_delete_form.html.twig') }}
</div>

{% endblock %}
