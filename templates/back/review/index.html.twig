{% extends 'base.html.twig' %}
{% block title %}Review index
{% endblock %}

{% block body %}
{{ include('_nav.html.twig') }}
<div class="contaier-fluid mx-5">
    <h1 class="text-center pt-5 ourShadow">Liste des commentaires signalés</h1>

	<table class="table table-hover table-bordered text-center">
		<thead class="ourHead">
			<tr>
				<th class="OurTd">Id</th>
				<th class="OurTd">Commentaire signalé(s)</th>
				<th class="OurTd">Nombre de signalement</th>
				<th class="OurTd">Opérations</th>
			</tr>
		</thead>
		<tbody>
			{% for review in reviews %}
				<tr>
					<td class="OurTd">{{ review.id }}</td>
					<td class="OurTd"> {{ review.content }}</td>
					<td class="OurTd">{{ review.reportedCount }}</td>
					<td class="OurTd">
						<a href="{{ path('back_review_show', {'id': review.id}) }}"><button type="button" class="btn ourBtn my-1">Détails</button></a>

						{{ include('back/review/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td  class="OurTd" colspan="6">Aucun commentaire signalé(s)</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
