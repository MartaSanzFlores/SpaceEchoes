{% extends 'base.html.twig' %}
{% block title %}Utilisateurs{% endblock %}

{% block body %}
{{ include('_nav.html.twig') }}

<div class="contaier-fluid mx-5">
    <h1 class="text-center pt-5 ourShadow">Liste des utilisateurs</h1>   
    <div class="d-flex justify-content-end">
        <a  href="{{ path('back_user_new') }}">
            <button type="button" class="btn ourBtn m-2">Ajouter</button>
        </a>
    </div>
    <table class="table table-hover table-bordered text-center">
        <thead class="ourHead">
            <tr>
                <th class="OurTd">Id</th>
                <th class="OurTd">Email</th>
                <th class="OurTd">Nom d'utilisateur</th>
                <th class="OurTd">Roles</th>
                <th class="OurTd">Opérations</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td class="OurTd">{{ user.id }}</td>
                <td class="OurTd">{{ user.email }}</td>
                <td class="OurTd">{{ user.userName }}</td>
                <td class="OurTd">{{ user.roles ? user.roles|json_encode : '' }}</td>   
                <td class="OurTd">
                    <a href="{{ path('back_user_show', {'id': user.id}) }}">
                        <button type="button" class="btn ourBtn">Détails</button>
                    </a>
                    <a href="{{ path('back_user_edit', {'id': user.id}) }}">
                        <button type="button" class="btn ourBtn">Modifier</button>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td class="OurTd" colspan="8">Utilisateurs non trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
