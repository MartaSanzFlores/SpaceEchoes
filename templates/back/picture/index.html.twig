{% extends 'base.html.twig' %}
{% block title %}Liste des Images
{% endblock %}

{% block body %}
	{{ include('_nav.html.twig') }}
	<div class="contaier-fluid mx-5">
		<h1 class="text-center pt-5 ourShadow">Liste des Images</h1>
		<div class="d-flex justify-content-end">
			<a href="{{ path('back_picture_new') }}">
				<button type="button" class="btn ourBtn m-2">Ajouter</button>
			</a>
		</div>
		<table class="table table-hover table-bordered text-center">
			<thead class="ourHead">
				<tr>
					<th class="OurTd">Id</th>
					<th class="OurTd">Url</th>
					<th class="OurTd">Description</th>
					<th class="OurTd">Text alternative (alt)</th>
					<th class="OurTd">Galerie</th>
					<th class="OurTd">Slug</th>
					<th class="OurTd">Opérations</th>
				</tr>
			</thead>
			<tbody>
				{% for picture in pictures %}
					<tr>
						<td class="OurTd">{{ picture.id }}</td>
						<td class="OurTd"><img src="{{ picture.url }}"</img></td>
						<td class="OurTd">{{ picture.description }}</td>
						<td class="OurTd">{{ picture.altText }}</td>
						<td class="OurTd">{{ picture.galery ? 'Oui' : 'Non' }}</td>
						<td class="OurTd">{{ picture.slug }}</td>
						<td class="OurTd">
							<a href="{{ path('back_picture_show', {'id': picture.id}) }}"><button type="button" class="btn ourBtn my-1">Détails</button></a>
							<a href="{{ path('back_picture_edit', {'id': picture.id}) }}"><button type="button" class="btn ourBtn my-1">Modifier</button></a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td class="OurTd" colspan="11">Images non trouvées</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
