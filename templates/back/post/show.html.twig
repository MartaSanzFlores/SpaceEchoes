{% extends 'base.html.twig' %}
{% block title %}Article Détails{% endblock %}

{% block body %}
{{ include('_nav.html.twig') }}
 
<div class="contaier-fluid mx-5">
    <h1 class="text-center pt-5 ourShadow">Article</h1>
    <div class="d-flex justify-content-end">
        <a href="{{ path('back_post_edit', {'id': post.id}) }}">
            <button type="button" class="btn ourBtn m-2">Modifier</button>
        </a>
        <a href="{{ path('back_post') }}">
            <button type="button" class="btn ourBtnXl m-2">Retour à la liste</button>
        </a>
    </div>
    <div class="d-flex justify-content-center">
        <table class="table table-hover table-bordered text-center">
            <tbody>
                <tr>
                    <th class="table-secondary">Id</th>
                    <td>{{ post.id }}</td>
                </tr>
                <tr>
                    <th class="table-secondary">Titre</th>
                    <td>{{ post.title }}</td>
                </tr>
                <tr>
                    <th class="table-secondary">Résumé</th>
                    <td>{{ post.excerpt }}</td>
                </tr>
                <tr>
                    <th class="table-secondary">Contenu</th>
                    <td>{{ post.content }}</td>
                </tr>
                <tr>
                    <th class="table-secondary">Slug</th>
                    <td>{{ post.slug }}</td>
                </tr>
                <tr>
                    <th class="table-secondary">Date de publication</th>
                    <td>{{ post.publishedAt ? post.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th class="table-secondary">Date de création</th>
                    <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th class="table-secondary">Date de modification</th>
                    <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="d-flex justify-content-end">
        {{ include('back/post/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
