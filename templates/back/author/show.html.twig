{% extends 'base.html.twig' %}
{% block title %}Auteur
{% endblock %}

{% block body %}
	{{ include('_nav.html.twig') }}
	<div class="contaier-fluid mx-5">
		<h1 class="text-center pt-5 ourShadow">Auteur</h1>
		<div class="d-flex justify-content-end">
			<a href="{{ path('back_author') }}">
				<button type="button" class="btn ourBtnXl m-2">Retour à la liste</button>
			</a>

			<a href="{{ path('back_author_edit', {'id': author.id}) }}">
				<button type="button" class="btn ourBtn m-2">Modifier</button>
			</a>
		</div>
		<div class="d-flex justify-content-center">
			<table class="table table-hover table-bordered text-center">
				<tbody>
					<tr>
						<th class="table-secondary">Id</th>
						<td>{{ author.id }}</td>
					</tr>
					<tr>
						<th class="table-secondary">Prénom</th>
						<td>{{ author.firstName }}</td>
					</tr>
					<tr>
						<th class="table-secondary">Nom</th>
						<td>{{ author.lastName }}</td>
					</tr>
					<tr>
						<th class="table-secondary">Date de création</th>
						<td>{{ author.createdAt ? author.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					</tr>
					<tr>
						<th class="table-secondary">Date de modification</th>
						<td>{{ author.updatedAt ? author.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
					</tr>
				</tbody>
			</table>
		</div>
		<div class="d-flex justify-content-end">
			{{ include('back/author/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
